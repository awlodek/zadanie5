<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="LG Swift"
            android:layout_gravity="center"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="159dp"
            android:layout_height="262dp"
            app:srcCompat="@drawable/drugi"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="textMultiLine"
            android:singleLine="false"
            android:text="Specyfikacja sprzętowa:\n\n
- Android 2.3 Gingerbread;\n
- 4,5-calowy ekran IPS LCD True HD o rozdzielczości 720 x 1280 pikseli (329 dpi);\n
- aparat 8 Mpix z diodą LED;\n
- dwurdzeniowy procesor o taktowaniu 1,5 GHz;\n
- 1 GB pamięci RAM oraz 4 GB ROM;\n
- WiFi b/g/n z DLNA, WiFi Direct, Bluetooth;\n
- slot kart pamięci microSDHC do 32 GB;\n
- bateria 1830 mAh;\n
- wymiary: 132,9 x 67,9 x 10,4 mm;\n
- waga: 135 gramów." />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="Powrót"
            android:onClick="onClick"/>
    </LinearLayout>
</ScrollView>